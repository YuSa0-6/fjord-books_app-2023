<h1><%= t('views.common.title_show', name: User.model_name.human) %></h1>

<div class="show-item">
  <%= image_tag @user.avatar.variant(resize_to_limit: [100, 100]) if @user.avatar.attached? %>
  <%= render @user %>
</div>

<nav class="page-nav">
  <% if current_user == @user %>
    <%= link_to t('views.common.edit', name: User.model_name.human.downcase), edit_user_registration_path %> |
  <% end %>
  <%= link_to t('views.common.back', name: i18n_pluralize(User.model_name.human.downcase)), users_path %>
</nav>
